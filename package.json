{
	"name": "angular-jester",
	"displayName": "Angular Jester",
	"description": "Generate Jest spec files for Angular projects.",
	"version": "0.0.11",
	"publisher": "michael-fontecchio",
	"author": {
		"name": "Michael Fontecchio"
	},
	"icon": "logo.png",
	"engines": {
		"vscode": "^1.81.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mFontecchio/angular-jester.git"
	},
	"categories": [
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onCommand:angular-jester.generateJestFile"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "angular-jester.generateJestSpec",
				"title": "Angular: Generate jest / jasmine spec file"
			},
			{
				"command": "angular-jester.generateMock",
				"title": "Angular: Generate mock file"
			}
		],
		"configuration": {
			"title": "Angular Jester",
			"properties": {
				"angular-jester.useDescribeBlocks": {
					"type": "boolean",
					"default": false,
					"description": "Use separate describe blocks for each method in tests."
				}
			}
		},
		"menus": {
			"explorer/context": [
				{
					"when": "!explorerResourceIsFolder && (resourceFilename =~ /\\.model\\.ts$|\\.service\\.ts$|\\.guard\\.ts$|\\.component\\.ts$|\\.pipe\\.ts$|\\.directive\\.ts$/)",
					"submenu": "angular-jester.submenu",
					"group": "angular-jester@1"
				}
			],
			"angular-jester.submenu": [
				{
					"command": "angular-jester.generateJestSpec"
				},
				{
					"command": "angular-jester.generateMock"
				}
			]
		},
		"submenus": [
			{
				"id": "angular-jester.submenu",
				"label": "Angular Jester"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"typescript": "^5.1.6"
	},
	"devDependencies": {
		"@types/debug": "^4.1.8",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.81.0",
		"@typescript-eslint/eslint-plugin": "^6.4.1",
		"@typescript-eslint/parser": "^6.4.1",
		"@vscode/test-electron": "^2.3.4",
		"eslint": "^8.47.0",
		"glob": "^10.3.3",
		"mocha": "^10.2.0"
	}
}
